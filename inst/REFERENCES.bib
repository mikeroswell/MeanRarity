file = {:Users/mikeroswell/Library/Application Support/Mendeley Desktop/Downloaded/B{\'{e}}guinot - 2018 - How to Extrapolate Species Abundance Distributions with Minimum Bias When Dealing with Incomplete Species Inventories.pdf:pdf},
journal = {Advances in Research},
number = {4},
pages = {1--24},
title = {{How to Extrapolate Species Abundance Distributions with Minimum Bias When Dealing with Incomplete Species Inventories}},
