year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite MeanRarity in publications use:")

citEntry(
		 entry = 'manual',
		 title = paste('MeanRarity:', meta$Title),
		 author = personList(as.person("Michael Roswell"),
  		                     as.person("Joanathan Dushoff")),
		 year = year,
		 note = note,
		 url = "https://github.com/mikeroswell/MeanRarity",
		 textVersion = paste("Michael Roswell and Jonathan Dushoff", year, "MeanRarity: Hill Diversity Estimation and Visualisation", note, "URL: https://github.com/mikeroswell/MeanRarity.")
)
