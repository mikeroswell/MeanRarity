doi = {10.1126/sciadv.aaz0414},
file = {:Users/mikeroswell/Dropbox/PDFS-LAB/Enquist_etal_2019_commonness_of_rarity.pdf:pdf},
issn = {23752548},
journal = {Science Advances},
number = {11},
